global:
  smtp_smarthost: email-smtp.${SES_REGION}.amazonaws.com:587
  smtp_from: ${ALERT_FROM}
  smtp_auth_username: ${SES_SMTP_USER}
  smtp_auth_password: ${SES_SMTP_PASS}
  smtp_require_tls: true

route:
  receiver: team-email
  group_wait: 60s
  group_interval: 5m
  repeat_interval: 2h

receivers:
  - name: team-email
    email_configs:
      - to: ${ALERT_TO}
